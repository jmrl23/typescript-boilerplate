  },
  "devDependencies": {
    "@swc/core": "^1.15.3",
    "@tsconfig/node-lts": "^24.0.0",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1"
  }
}
